    <script>
        // State
        let rawBalance = 1250000.00;

        function updateCurrency() {
            const select = document.getElementById('currencySelect');
            const balanceEl = document.getElementById('wallet-balance');
            const currency = select.value;
            
            let formatted;
            switch(currency) {
                case 'INR': formatted = '‚Çπ' + (rawBalance * 83).toLocaleString(); break;
                case 'KWD': formatted = (rawBalance * 0.31).toLocaleString() + ' KD'; break;
                case 'KRW': formatted = '‚Ç©' + (rawBalance * 1300).toLocaleString(); break;
                default: formatted = '$' + rawBalance.toLocaleString();
            }
            
            balanceEl.style.opacity = '0';
            setTimeout(() => {
                balanceEl.innerText = formatted;
                balanceEl.style.opacity = '1';
            }, 150);
        }

        function toggleView() {
            document.getElementById('appFrame').classList.toggle('mobile-mode', document.getElementById('viewToggle').checked);
        }

        function toggleDark() {
            document.getElementById('appFrame').setAttribute('data-theme', document.getElementById('darkToggle').checked ? 'dark' : 'light');
        }

        function refreshWallet() {
            const btn = document.getElementById('refreshBtn');
            btn.classList.add('spinning');
            setTimeout(() => btn.classList.remove('spinning'), 800);
            updateCurrency();
        }

        function switchTab(evt, tabName) {
            const contents = document.getElementsByClassName("tab-content");
            for (let i = 0; i < contents.length; i++) contents[i].classList.remove("active");
            
            const tabs = document.getElementsByClassName("tab-btn");
            for (let i = 0; i < tabs.length; i++) tabs[i].classList.remove("active");
            
            document.getElementById(tabName).classList.add("active");
            evt.currentTarget.classList.add("active");
        }

        function processWithdrawal() {
            const amt = document.getElementById('withdraw-amount').value;
            if(amt >= 50) alert("Withdrawal Request of " + amt + " Submitted!");
            else alert("Error: Minimum withdrawal is 50.00");
        }
    </script>
