    <script>
        // --- Theme Logic ---
        const themeToggle = document.getElementById('themeToggle');
        themeToggle.addEventListener('change', () => {
            const theme = themeToggle.checked ? 'light' : 'dark';
            document.body.setAttribute('data-theme', theme);
        });

        // --- View Logic ---
        const modeToggle = document.getElementById('modeToggle');
        modeToggle.addEventListener('change', () => {
            document.body.classList.toggle('mobile-mode');
        });

        function toggleMenu() {
            document.getElementById('drawer').classList.toggle('active');
            document.getElementById('overlay').classList.toggle('active');
        }

        function handleNavClick(element, pageName) {
            const isMobile = element.closest('.mobile-bottom-nav');
            const container = isMobile ? document.querySelector('.mobile-bottom-nav') : document.querySelector('.web-nav');
            
            container.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
            element.classList.add('active');

            const dashView = document.getElementById('view-dashboard');
            const otherView = document.getElementById('view-other');
            
            if (pageName === 'Dashboard') {
                dashView.classList.add('active-view');
                otherView.classList.remove('active-view');
            } else {
                dashView.classList.remove('active-view');
                otherView.classList.add('active-view');
                document.getElementById('pageTitle').innerText = pageName;
            }
            if(document.getElementById('drawer').classList.contains('active')) toggleMenu();
        }

        // --- Audio & Miner Logic ---
        let soundOn = false;
        let audioCtx;
        let beats = 290; 
        let coins = 1;

        function toggleSound() {
            if (!audioCtx) audioCtx = new (window.AudioContext || window.webkitAudioContext)();
            soundOn = !soundOn;
            document.getElementById('soundText').innerText = soundOn ? "Sound On" : "Sound Off";
            document.getElementById('soundIcon').innerText = soundOn ? "volume_up" : "volume_off";
        }

        function playThump() {
            if (!soundOn || !audioCtx) return;
            const osc = audioCtx.createOscillator();
            const g = audioCtx.createGain();
            osc.type = 'triangle';
            osc.frequency.setValueAtTime(60, audioCtx.currentTime);
            g.gain.exponentialRampToValueAtTime(0.001, audioCtx.currentTime + 0.1);
            osc.connect(g); g.connect(audioCtx.destination);
            osc.start(); osc.stop(audioCtx.currentTime + 0.1);
        }

        setInterval(() => {
            beats++;
            playThump();
            if (beats >= 300) {
                beats = 0;
                coins++;
                document.getElementById('coinCounter').style.transform = "scale(1.5)";
                setTimeout(() => document.getElementById('coinCounter').style.transform = "scale(1)", 200);
            }
            document.getElementById('beatCounter').innerText = beats;
            document.getElementById('coinCounter').innerText = coins;
        }, 500);
    </script>
</body>
