    <script>
        // --- UI Logic ---
        const modeToggle = document.getElementById('modeToggle');
        modeToggle.addEventListener('change', () => {
            document.body.classList.toggle('mobile-mode');
        });

        function toggleMenu() {
            document.getElementById('drawer').classList.toggle('active');
            document.getElementById('overlay').classList.toggle('active');
        }

        // --- NAVIGATION LOGIC (Dynamic View Switching) ---
        function handleNavClick(element, pageName) {
            // 1. Remove active class from all links (Web & Mobile specific targeting)
            const isMobile = element.parentElement.classList.contains('mobile-bottom-nav');
            const container = isMobile ? document.querySelector('.mobile-bottom-nav') : document.querySelector('.web-nav');
            
            container.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
            
            // 2. Add active to clicked link
            element.classList.add('active');

            // 3. Switch View
            const dashView = document.getElementById('view-dashboard');
            const otherView = document.getElementById('view-other');
            const pageTitle = document.getElementById('pageTitle');
            const pageIcon = document.getElementById('pageIcon');

            if (pageName === 'Dashboard') {
                dashView.classList.add('active-view');
                otherView.classList.remove('active-view');
            } else {
                dashView.classList.remove('active-view');
                otherView.classList.add('active-view');
                pageTitle.innerText = "Welcome to " + pageName;
                
                // Simple icon mapping
                let icon = 'auto_awesome';
                if(pageName.includes('Earnings')) icon = 'payments';
                if(pageName.includes('Marketplace')) icon = 'storefront';
                if(pageName.includes('Profile')) icon = 'person';
                if(pageName.includes('Wallet')) icon = 'wallet';
                pageIcon.innerText = icon;
            }

            // Close drawer if open
            const drawer = document.getElementById('drawer');
            if(drawer.classList.contains('active')) toggleMenu();
        }

        // --- Sound Logic (AudioSynthesis) ---
        let soundOn = false;
        let audioCtx;

        function initAudio() {
            if (!audioCtx) {
                audioCtx = new (window.AudioContext || window.webkitAudioContext)();
            }
            if (audioCtx.state === 'suspended') {
                audioCtx.resume();
            }
        }

        function playHeartbeatSound() {
            if (!soundOn || !audioCtx) return;

            // Create oscillator
            const osc = audioCtx.createOscillator();
            const gainNode = audioCtx.createGain();

            osc.type = 'triangle'; // Softer sound
            osc.frequency.setValueAtTime(60, audioCtx.currentTime); // Low thud
            osc.frequency.exponentialRampToValueAtTime(40, audioCtx.currentTime + 0.1);

            gainNode.gain.setValueAtTime(0.5, audioCtx.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.001, audioCtx.currentTime + 0.1);

            osc.connect(gainNode);
            gainNode.connect(audioCtx.destination);

            osc.start();
            osc.stop(audioCtx.currentTime + 0.1);
        }

        function toggleSound() {
            initAudio(); // Initialize on first user interaction
            soundOn = !soundOn;
            
            const btnText = document.getElementById('soundText');
            const btnIcon = document.getElementById('soundIcon');
            
            if(soundOn) {
                btnText.innerText = "Sound On";
                btnIcon.innerText = "volume_up";
                btnText.style.color = "#10b981";
            } else {
                btnText.innerText = "Sound Off";
                btnIcon.innerText = "volume_off";
                btnText.style.color = "white";
            }
        }

        // --- MINING SIMULATION LOGIC ---
        let beats = 290; 
        let coins = 1;
        
        const beatEl = document.getElementById('beatCounter');
        const coinEl = document.getElementById('coinCounter');

        // Update loop: 2 beats per second (500ms interval)
        setInterval(() => {
            beats++;
            
            // Play sound on beat
            playHeartbeatSound();

            // Animation logic: Check for conversion
            if (beats >= 300) {
                beats = beats - 300; // Reset beats
                coins++; // Add coin
                
                // Visual feedback on conversion
                coinEl.style.transform = "scale(1.5)";
                setTimeout(() => coinEl.style.transform = "scale(1)", 200);
            }

            // Update DOM
            beatEl.innerText = beats;
            coinEl.innerText = coins;

        }, 500); 

    </script>
</body>
</html>
