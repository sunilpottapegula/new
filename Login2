<script>
/* VIEW TOGGLE */
function toggleView() {
  const btn = document.getElementById('viewToggle');
  const webView = document.querySelector('.web-view');
  const mobileView = document.querySelector('.mobile-view');
  
  if (webView.style.display === 'none' || !webView.style.display) {
    // Switch to Web View
    webView.style.display = 'flex';
    mobileView.style.display = 'none';
    btn.textContent = 'üì± Mobile View';
    btn.classList.remove('active');
    btn.classList.add('active');
    btn.style.background = '#4285f4';
  } else {
    // Switch to Mobile View
    webView.style.display = 'none';
    mobileView.style.display = 'block';
    btn.textContent = 'üåê Web View';
    btn.classList.add('active');
    btn.style.background = '#34a853';
  }
}

/* WEB VIEW SLIDER */
let webSlides = document.querySelectorAll(".web-slide");
let webIndex = 0;
setInterval(() => {
  webSlides[webIndex].classList.remove("active");
  webIndex = (webIndex + 1) % webSlides.length;
  webSlides[webIndex].classList.add("active");
}, 4000);

/* MOBILE AUTO SLIDE */
const mobileSlides = [
  "üîí Secure Digital Wallet",
  "‚ö° Fast & Reliable Transactions", 
  "üíé Your Crypto, Your Control"
];
let mobileIndex = 0;
const mobileSlideEl = document.getElementById('mobileSlide');
setInterval(() => {
  mobileIndex = (mobileIndex + 1) % mobileSlides.length;
  mobileSlideEl.textContent = mobileSlides[mobileIndex];
}, 3000);

/* LOGIN FUNCTIONS */
function signIn() {
  const email = document.getElementById("loginEmail").value;
  const password = document.getElementById("loginPassword").value;
  const error = document.getElementById("loginError");

  error.textContent = "";
  
  if (password.length < 8) {
    error.textContent = "Password should be at least 8 characters";
    return;
  }

  fetch("/api/auth/login", {
    method: "POST",
    headers: {"Content-Type": "application/json"},
    body: JSON.stringify({ email, password })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      window.location.href = "/home";
    } else {
      error.textContent = "Invalid credentials";
    }
  })
  .catch(() => {
    error.textContent = "Login failed. Please try again.";
  });
}

function mobileSignIn() {
  const email = document.getElementById("mobileLoginEmail").value;
  const password = document.getElementById("mobileLoginPassword").value;
  const error = document.getElementById("mobileLoginError");

  error.textContent = "";
  
  if (password.length < 8) {
    error.textContent = "Password should be at least 8 characters";
    return;
  }

  fetch("/api/auth/login", {
    method: "POST",
    headers: {"Content-Type": "application/json"},
    body: JSON.stringify({ email, password })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      window.location.href = "/home";
    } else {
      error.textContent = "Invalid credentials";
    }
  });
}

/* GOOGLE LOGIN */
function handleGoogleLogin(response) {
  fetch("/api/auth/google", {
    method: "POST",
    headers: {"Content-Type": "application/json"},
    body: JSON.stringify({ token: response.credential })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      window.location.href = "/home";
    } else {
      alert("Google login failed");
    }
  });
}

/* SIGNUP MODAL */
function openSignup() {
  document.getElementById("signupModal").style.display = "flex";
  document.body.style.overflow = "hidden";
}

function closeSignup() {
  document.getElementById("signupModal").style.display = "none";
  document.body.style.overflow = "auto";
  document.getElementById("signupError").textContent = "";
}

// Close modal on outside click
window.onclick = function(event) {
  const modal = document.getElementById("signupModal");
  if (event.target === modal) {
    closeSignup();
  }
}

function register() {
  const email = document.getElementById("signupEmail").value;
  const pass = document.getElementById("signupPassword").value;
  const confirm = document.getElementById("confirmPassword").value;
  const error = document.getElementById("signupError");

  error.textContent = "";

  if (!email.endsWith("@gmail.com")) {
    error.textContent = "Only Gmail accounts allowed";
    return;
  }
  if (pass.length < 8) {
    error.textContent = "Password must be at least 8 characters";
    return;
  }
  if (pass !== confirm) {
    error.textContent = "Passwords do not match";
    return;
  }

  fetch("/api/auth/signup", {
    method: "POST",
    headers: {"Content-Type": "application/json"},
    body: JSON.stringify({ email, password: pass })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      closeSignup();
      window.location.href = "/home";
    } else {
      error.textContent = data.error || "Registration failed";
    }
  });
}
</script>

</body>
</html>
```

## Key Changes Made:

1. **Toggle Switch**: Fixed top-right button to switch between Web/Mobile views
2. **Web View** (Left-Right Layout):
   - 60% left slider with enhanced content
   - 40% right login panel
   - Matches your original desktop design

3. **Mobile View** (Matches Image Template):
   - Single column stacked layout
   - **Auto-sliding header** at top (like your image)
   - **Email + Apple** section below slider
   - **Google Sign** at bottom
   - Compact, mobile-optimized design

4. **Enhanced Features**:
   - Smooth animations and transitions
   - Gradient backgrounds
   - Hover effects
   - Responsive modal
   - Separate login forms for each view
   - Auto-slide text in mobile header

5. **Google Sign-In**: Enhanced with better styling parameters

**To test**: Click the toggle button (üåê Web View / üì± Mobile View) to switch between layouts. Perfect for testing both views in any compiler/browser!

