                <span class="slider"></span>
            </label>
        </div>
    </div>

    <div id="app-container" class="glass-panel">
        
        <div class="drawer-overlay" id="overlay" onclick="toggleMenu()"></div>
        <div class="right-drawer" id="drawer">
            <div style="display: flex; justify-content: space-between; margin-bottom: 40px;">
                <h3 style="font-weight: 800; color: var(--primary);">GIFT PRO</h3>
                <span class="material-icons-round" style="cursor: pointer;" onclick="toggleMenu()">close</span>
            </div>
            <div style="display: grid; gap: 8px;">
                <div class="nav-link" onclick="handleNavClick(this, 'Profile')"><span class="material-icons-round">person</span> Profile</div>
                <div class="nav-link" onclick="handleNavClick(this, 'Wallet')"><span class="material-icons-round">wallet</span> Wallet</div>
                <div class="nav-link" onclick="handleNavClick(this, 'Settings')"><span class="material-icons-round">settings</span> Settings</div>
                <hr style="opacity: 0.1; margin: 10px 0;">
                <div class="nav-link" style="color: var(--secondary);" onclick="handleNavClick(this, 'Logout')"><span class="material-icons-round">logout</span> Logout</div>
            </div>
        </div>

        <div style="height: 100%; display: flex; flex-direction: column;">
            <header>
                <h2 style="font-weight: 800; letter-spacing: -1px;">GIFT APP</h2>
                <div class="icon-circle" onclick="toggleMenu()">
                    <span class="material-icons-round">menu</span>
                </div>
            </header>

            <nav class="web-nav">
                <div class="nav-link active" onclick="handleNavClick(this, 'Dashboard')"><span class="material-icons-round">grid_view</span> Dashboard</div>
                <div class="nav-link" onclick="handleNavClick(this, 'Gift Wheel')"><span class="material-icons-round">auto_awesome</span> Gift Wheel</div>
                <div class="nav-link" onclick="handleNavClick(this, 'Earnings')"><span class="material-icons-round">payments</span> Earnings</div>
                <div class="nav-link" onclick="handleNavClick(this, 'Marketplace')"><span class="material-icons-round">storefront</span> Marketplace</div>
            </nav>

            <div class="content-area">
                <div id="view-dashboard" class="page-view active-view">
                    <span class="material-icons-round placeholder-icon">space_dashboard</span>
                    <h1 style="font-weight: 800; font-size: 2.2rem; margin-bottom: 10px;">Welcome Back</h1>
                    <p>Your gifts and earnings are updated for today.</p>
                </div>

                <div id="view-other" class="page-view">
                    <span class="material-icons-round placeholder-icon" id="pageIcon">auto_awesome</span>
                    <h2 id="pageTitle" style="font-weight: 800; font-size: 2rem;">Welcome</h2>
                    <p style="margin-top: 10px;">This feature is currently being polished.</p>
                </div>
            </div>

            <nav class="mobile-bottom-nav">
                <div class="nav-link active" onclick="handleNavClick(this, 'Dashboard')"><span class="material-icons-round">grid_view</span></div>
                <div class="nav-link" onclick="handleNavClick(this, 'Gift Wheel')"><span class="material-icons-round">auto_awesome</span></div>
                <div class="nav-link" onclick="handleNavClick(this, 'Marketplace')"><span class="material-icons-round">storefront</span></div>
                <div class="nav-link" onclick="handleNavClick(this, 'Profile')"><span class="material-icons-round">person</span></div>
            </nav>
        </div>
    </div>

    <script>
        // Frame Toggles
        const modeToggle = document.getElementById('modeToggle');
        const themeToggle = document.getElementById('themeToggle');

        modeToggle.addEventListener('change', () => {
            document.body.classList.toggle('mobile-mode');
        });

        themeToggle.addEventListener('change', () => {
            document.body.classList.toggle('light-mode');
        });

        // Navigation Logic
        function toggleMenu() {
            document.getElementById('drawer').classList.toggle('active');
            document.getElementById('overlay').classList.toggle('active');
        }

        function handleNavClick(element, pageName) {
            // Remove active from all links in all navs
            document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
            
            // If it's a menu/bottom nav item, we don't have a direct "sibling" group, 
            // so we'll just highlight the one clicked.
            element.classList.add('active');

            const dashView = document.getElementById('view-dashboard');
            const otherView = document.getElementById('view-other');
            const pageTitle = document.getElementById('pageTitle');
            const pageIcon = document.getElementById('pageIcon');

            if (pageName === 'Dashboard') {
                dashView.classList.add('active-view');
                otherView.classList.remove('active-view');
            } else {
                dashView.classList.remove('active-view');
                otherView.classList.add('active-view');
                pageTitle.innerText = pageName;
                
                let icon = 'auto_awesome';
                if(pageName.includes('Earnings')) icon = 'payments';
                if(pageName.includes('Marketplace')) icon = 'storefront';
                if(pageName.includes('Profile')) icon = 'person';
                if(pageName.includes('Wallet')) icon = 'wallet';
                pageIcon.innerText = icon;
            }

            const drawer = document.getElementById('drawer');
            if(drawer.classList.contains('active')) toggleMenu();
        }
    </script>
</body>
