<script>
    // --- NAVIGATION LOGIC ---
    function toggleMenu() {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');
        sidebar.classList.toggle('active');
        overlay.classList.toggle('active');
    }

    function navigateTo(viewId) {
        // Hide all views
        document.querySelectorAll('.view').forEach(view => view.classList.remove('active'));
        // Show target view
        document.getElementById(viewId).classList.add('active');
        
        // Update Header Title logic
        const titles = {
            'dashboard': 'Home',
            'profile': 'Profile',
            'settings': 'Settings'
        };
        document.getElementById('page-title').innerText = titles[viewId];

        // Close menu if open
        const sidebar = document.getElementById('sidebar');
        if (sidebar.classList.contains('active')) {
            toggleMenu();
        }

        // Hide success message when navigating away/back
        document.getElementById('successMsg').style.display = 'none';
    }

    // --- DASHBOARD LOGIC ---
    let rotation = 0;
    function spinWheel() {
        const wheel = document.getElementById('wheel');
        // Random spin between 720deg (2 spins) and 1440deg (4 spins)
        const spin = Math.floor(Math.random() * 720) + 720;
        rotation += spin;
        wheel.style.transform = `rotate(${rotation}deg)`;
    }

    function switchTab(tabName) {
        // Handle Tab Styling
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        event.target.classList.add('active');

        // Handle Content Showing
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
        document.getElementById(tabName).classList.add('active');
    }

    // --- SETTINGS MODAL LOGIC ---
    function openModal() {
        document.getElementById('passwordModal').style.display = 'flex';
        document.getElementById('successMsg').style.display = 'none';
    }

    function closeModal() {
        document.getElementById('passwordModal').style.display = 'none';
    }

    function savePassword() {
        // 1. Close Modal
        closeModal();
        // 2. Show Success Message (as per Image 4)
        const msg = document.getElementById('successMsg');
        msg.style.display = 'block';
        // Optional: clear inputs
        document.querySelectorAll('.modal input').forEach(i => i.value = '');
    }
</script>

</body>
