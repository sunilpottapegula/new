        <script>
            function toggleMobileMenu() {
                // In a real app this would slide out, here we mock the items from the sketch
                const choice = confirm("Menu Options:\n1. Help & Support\n2. Logout\n\nClick OK for Help, Cancel to Close.");
                if(choice) alert("Help & Support Page");
            }
        </script>

    </div>

    <script>
        /* --- LOGIC --- */

        // 1. Toggle View Mode (Web <-> Mobile)
        function toggleViewMode() {
            const app = document.getElementById('app-container');
            if (app.classList.contains('mode-mobile')) {
                app.classList.remove('mode-mobile');
                app.classList.add('mode-web');
                // Ensure dashboard is visible when switching to web
                switchContent('dashboard');
            } else {
                app.classList.remove('mode-web');
                app.classList.add('mode-mobile');
            }
        }

        // 2. Web Menu Toggle
        function toggleWebMenu() {
            const menu = document.getElementById('webMenu');
            menu.classList.toggle('show');
        }

        // 3. Tab Switching (Refer vs Leaderboard)
        function switchTab(tabName) {
            // Update Buttons
            document.querySelectorAll('.tab-item').forEach(el => el.classList.remove('active'));
            document.getElementById('tab-' + tabName).classList.add('active');

            // Update Content
            document.querySelectorAll('.content-section').forEach(el => el.classList.remove('active'));
            document.getElementById('content-' + tabName).classList.add('active');
        }

        // 4. Main Content Switching (Home, Wallet, etc)
        function switchContent(viewId) {
            // Hide all views
            document.querySelectorAll('.full-page-view').forEach(el => el.classList.remove('active'));
            // Show target
            document.getElementById('view-' + viewId).classList.add('active');
            
            // Close web menu if open
            document.getElementById('webMenu').classList.remove('show');
        }

        // 5. Wheel Spin Logic
        let degree = 0;
        function spinWheel() {
            degree += Math.floor(Math.random() * 2000) + 2000;
            document.getElementById('wheel').style.transform = `rotate(${degree}deg)`;
        }
    </script>
