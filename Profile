<script>
    // Navigation
    function toggleSidebar() {
        document.getElementById('sidebar').classList.toggle('active');
    }

    function showView(viewName) {
        document.getElementById('sidebar').classList.remove('active');
        if(viewName === 'profile') {
            document.getElementById('dashboard-view').classList.add('hidden');
            document.getElementById('profile-view').classList.remove('hidden');
        } else {
            document.getElementById('dashboard-view').classList.remove('hidden');
            document.getElementById('profile-view').classList.add('hidden');
        }
    }

    // Wheel Logic
    let degree = 0;
    function spinWheel() {
        const wheel = document.getElementById('wheel');
        const btn = document.getElementById('runBtn');
        btn.disabled = true;
        degree += Math.floor(Math.random() * 2000) + 2000;
        wheel.style.transform = `rotate(${degree}deg)`;
        setTimeout(() => { 
            btn.disabled = false;
            alert("Spinned Successfully!");
        }, 4000);
    }

    // Tab Logic
    function switchTab(type, btn) {
        const slider = document.getElementById('slider');
        slider.style.left = type === 'leader' ? 'calc(50% - 4px)' : '4px';
        
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        document.getElementById('refer').classList.toggle('hidden', type !== 'refer');
        document.getElementById('leader').classList.toggle('hidden', type !== 'leader');
    }

    // Profile Logic
    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function(){
            document.getElementById('profilePic').src = reader.result;
        }
        reader.readAsDataURL(event.target.files[0]);
    }
</script>

