    <script>
        /* --- VIEW SWITCHER LOGIC --- */
        function setView(mode) {
            const frame = document.getElementById('device-frame');
            const webBtn = document.getElementById('web-toggle');
            const mobBtn = document.getElementById('mobile-toggle');

            if (mode === 'web') {
                frame.className = 'web-view';
                webBtn.classList.add('active');
                mobBtn.classList.remove('active');
            } else {
                frame.className = 'mobile-view';
                mobBtn.classList.add('active');
                webBtn.classList.remove('active');
            }
        }

        /* --- NAVIGATION LOGIC --- */
        function toggleMenu() {
            document.getElementById('side-menu').classList.toggle('open');
        }

        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-content').forEach(p => p.classList.remove('active'));
            // Show target page
            document.getElementById('page-' + pageId).classList.add('active');
            // Close menu
            document.getElementById('side-menu').classList.remove('open');
            // Update bottom nav status
            updateBottomNav(pageId);
            // Scroll to top
            document.getElementById('main-scroll').scrollTop = 0;
        }

        function updateBottomNav(id) {
            document.querySelectorAll('.nav-icon-btn').forEach(b => b.classList.remove('active'));
            if (id === 'dashboard') document.getElementById('nav-home').classList.add('active');
            if (id === 'wallet') document.getElementById('nav-wallet').classList.add('active');
            if (id === 'profile') document.getElementById('nav-profile').classList.add('active');
        }

        /* --- DYNAMIC TABS LOGIC --- */
        function switchDynamic(tab) {
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.getElementById('btn-' + tab).classList.add('active');

            if (tab === 'refer') {
                document.getElementById('dyn-refer').style.display = 'block';
                document.getElementById('dyn-leader').style.display = 'none';
            } else {
                document.getElementById('dyn-refer').style.display = 'none';
                document.getElementById('dyn-leader').style.display = 'block';
            }
        }

        /* --- GAME LOGIC --- */
        let rotation = 0;
        function spinWheel() {
            const wheel = document.getElementById('wheel');
            const extraDeg = Math.floor(Math.random() * 360) + 720; // At least 2 full spins
            rotation += extraDeg;
            wheel.style.transform = `rotate(${rotation}deg)`;
        }
    </script>
