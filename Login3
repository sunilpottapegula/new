<script>
/* VIEW TOGGLE */
const viewToggle = document.getElementById('viewToggle');
const webView = document.querySelector('.web-view');
const mobileView = document.querySelector('.mobile-view');

viewToggle.addEventListener('click', function() {
  if (webView.style.display === 'none') {
    // Switch to Web
    webView.style.display = 'flex';
    mobileView.style.display = 'none';
    viewToggle.textContent = 'üì± Switch to Mobile';
    viewToggle.classList.add('active');
  } else {
    // Switch to Mobile
    webView.style.display = 'none';
    mobileView.style.display = 'block';
    viewToggle.textContent = 'üåê Switch to Web';
    viewToggle.classList.remove('active');
  }
});

/* WEB SLIDER */
const webSlides = document.querySelectorAll('.web-slide');
let webSlideIndex = 0;
setInterval(() => {
  webSlides[webSlideIndex].classList.remove('active');
  webSlideIndex = (webSlideIndex + 1) % webSlides.length;
  webSlides[webSlideIndex].classList.add('active');
}, 3500);

/* MOBILE AUTO SLIDE */
const mobileSlides = [
  'üîí Secure Digital Wallet',
  '‚ö° Fast & Reliable Transactions',
  'üíé Your Crypto, Your Control'
];
let mobileSlideIndex = 0;
const mobileSlideText = document.getElementById('mobileSlideText');
setInterval(() => {
  mobileSlideIndex = (mobileSlideIndex + 1) % mobileSlides.length;
  mobileSlideText.textContent = mobileSlides[mobileSlideIndex];
}, 3000);

/* AUTH FUNCTIONS */
function webSignIn() {
  const email = document.getElementById('webLoginEmail').value;
  const password = document.getElementById('webLoginPassword').value;
  const error = document.getElementById('webLoginError');
  
  validateAndLogin(email, password, error);
}

function mobileSignIn() {
  const email = document.getElementById('mobileLoginEmail').value;
  const password = document.getElementById('mobileLoginPassword').value;
  const error = document.getElementById('mobileLoginError');
  
  validateAndLogin(email, password, error);
}

function validateAndLogin(email, password, errorEl) {
  errorEl.textContent = '';
  
  if (!email || !password) {
    errorEl.textContent = 'Please fill all fields';
    return;
  }
  
  if (!email.endsWith('@gmail.com')) {
    errorEl.textContent = 'Only Gmail accounts allowed';
    return;
  }
  
  if (password.length < 8) {
    errorEl.textContent = 'Password must be 8+ characters';
    return;
  }
  
  // Simulate API call
  console.log('Login attempt:', { email, password });
  setTimeout(() => {
    alert('‚úÖ Login successful! Redirecting to /home...');
    // window.location.href = '/home';
  }, 1000);
}

function appleSignIn() {
  alert('üçé Apple Sign-In (Demo Mode)');
}

function handleGoogleSignIn(response) {
  console.log('Google Sign-In:', response.credential);
  alert('üîó Google Sign-In successful!');
  // fetch('/api/auth/google', { method: 'POST', body: JSON.stringify({ token: response.credential }) })
}

function openSignup() {
  document.getElementById('signupModal').style.display = 'flex';
  document.body.style.overflow = 'hidden';
}

function closeSignup() {
  document.getElementById('signupModal').style.display = 'none';
  document.body.style.overflow = 'auto';
  document.getElementById('signupError').textContent = '';
}

function registerAccount() {
  const email = document.getElementById('signupEmail').value;
  const password = document.getElementById('signupPassword').value;
  const confirmPass = document.getElementById('confirmPassword').value;
  const error = document.getElementById('signupError');
  
  error.textContent = '';
  
  if (!email.endsWith('@gmail.com')) {
    error.textContent = 'Only Gmail accounts allowed';
    return;
  }
  
  if (password.length < 8) {
    error.textContent = 'Password must be 8+ characters';
    return;
  }
  
  if (password !== confirmPass) {
    error.textContent = 'Passwords do not match';
    return;
  }
  
  console.log('Register:', { email, password });
  setTimeout(() => {
    alert('‚úÖ Account created! Logging you in...');
    closeSignup();
  }, 1000);
}

// Close modal on backdrop click
document.getElementById('signupModal').addEventListener('click', function(e) {
  if (e.target === this) closeSignup();
});

// Auto-focus first input in modal
document.getElementById('signupModal').addEventListener('shown', function() {
  document.getElementById('signupEmail').focus();
});
</script>

