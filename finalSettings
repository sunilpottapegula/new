    <script>
        function closeSettings() {
            if(confirm("Exit settings? Unsaved changes may be lost.")) {
                document.getElementById('appFrame').style.opacity = '0';
                setTimeout(() => alert("Settings Window Closed"), 300);
            }
        }

        function toggleView() {
            const frame = document.getElementById('appFrame');
            const isMobile = document.getElementById('viewToggle').checked;
            frame.classList.toggle('mobile-mode', isMobile);
        }

        function toggleDark() {
            const frame = document.getElementById('appFrame');
            const isDark = document.getElementById('darkToggle').checked;
            frame.setAttribute('data-theme', isDark ? 'dark' : 'light');
        }

        function openPasswordModal() { document.getElementById('passwordModal').style.display = 'flex'; }
        function closePasswordModal() { document.getElementById('passwordModal').style.display = 'none'; }

        function savePassword() {
            const n = document.getElementById('newPass').value;
            const c = document.getElementById('confirmPass').value;
            if(n !== "" && n === c) { alert("Success!"); closePasswordModal(); } 
            else { alert("Check passwords!"); }
        }

        function confirmDelete() {
            if(confirm("Are you absolutely sure?")) {
                alert("Account deletion process started.");
            }
        }

        const translations = {
            en: { title: "Settings", dark: "üåô Dark Mode", pass: "üîí Change Password", privacy: "üõ°Ô∏è Private Profile", notif: "üîî Notifications", lang: "Language", danger: "Danger Zone" },
            hi: { title: "‡§∏‡•á‡§ü‡§ø‡§Ç‡§ó‡•ç‡§∏", dark: "üåô ‡§°‡§æ‡§∞‡•ç‡§ï ‡§Æ‡•ã‡§°", pass: "üîí ‡§™‡§æ‡§∏‡§µ‡§∞‡•ç‡§° ‡§¨‡§¶‡§≤‡•á‡§Ç", privacy: "üõ°Ô∏è ‡§®‡§ø‡§ú‡•Ä ‡§™‡•ç‡§∞‡•ã‡§´‡§º‡§æ‡§á‡§≤", notif: "üîî ‡§∏‡•Ç‡§ö‡§®‡§æ‡§è‡§Ç", lang: "‡§≠‡§æ‡§∑‡§æ", danger: "‡§ñ‡§§‡§∞‡§®‡§æ‡§ï ‡§ï‡•ç‡§∑‡•á‡§§‡•ç‡§∞" },
            es: { title: "Ajustes", dark: "üåô Modo Oscuro", pass: "üîí Cambiar Contrase√±a", privacy: "üõ°Ô∏è Perfil Privado", notif: "üîî Notificaciones", lang: "Idioma", danger: "Zona de Peligro" }
        };

        function updateLang(code) {
            const t = translations[code] || translations['en'];
            document.getElementById('title-text').innerText = t.title;
            document.getElementById('label-dark').innerText = t.dark;
            document.getElementById('label-pass').innerText = t.pass;
            document.getElementById('label-privacy').innerText = t.privacy;
            document.getElementById('label-notif').innerText = t.notif;
            document.getElementById('label-lang').innerText = t.lang;
            document.getElementById('label-danger').innerText = t.danger;
        }
    </script>
