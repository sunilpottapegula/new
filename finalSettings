        function updateLang(code) {
            const t = translations[code] || translations['en'];
            
            document.getElementById('title-text').innerText = t.title;
            document.getElementById('label-dark').innerText = t.dark;
            document.getElementById('label-pass').innerText = t.pass;
            document.getElementById('label-privacy').innerText = t.privacy;
            document.getElementById('label-notif').innerText = t.notif;
            document.getElementById('label-lang').innerText = t.lang;
            document.getElementById('label-danger').innerText = t.danger;
            document.getElementById('btn-delete-text').innerText = t.del;
            document.getElementById('modal-title').innerText = t.pass;
        }
