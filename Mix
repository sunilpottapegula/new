<script>
    /* --- 1. TAB LOGIC --- */
    function switchTab(tabName) {
        const slider = document.getElementById('navSlider');
        const referBtn = document.getElementById('btn-refer');
        const leaderBtn = document.getElementById('btn-leader');
        
        // Handle Slider & Active Class
        if(tabName === 'leader') {
            slider.classList.add('right');
            leaderBtn.classList.add('active');
            referBtn.classList.remove('active');
        } else {
            slider.classList.remove('right');
            referBtn.classList.add('active');
            leaderBtn.classList.remove('active');
        }

        // Show/Hide Content
        document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
        document.getElementById('content-' + tabName).classList.add('active');
    }

    /* --- 2. LANGUAGE LOGIC --- */
    const translations = {
        en: {
            brand: "GIFT APP", profile: "Profile", settings: "Settings", about: "About",
            logout: "Logout", wheelTitle: "Gift Wheel", run: "Run",
            wheelDesc: "automatically Runs when button is hit", lblName: "NAME",
            lblEmail: "EMAIL", lblPhone: "PHONE", langLbl: "Language",
            notif: "Notifications", notifDesc: "Receive gift alerts",
            tabRefer: "Refer & Earn", tabLeader: "Leaderboard", referDesc: "Share this code to earn points!"
        },
        es: {
            brand: "APP DE REGALOS", profile: "Perfil", settings: "Ajustes", about: "Acerca de",
            logout: "Salir", wheelTitle: "Rueda de Regalos", run: "Girar",
            wheelDesc: "se ejecuta autom√°ticamente al pulsar", lblName: "NOMBRE",
            lblEmail: "CORREO", lblPhone: "TEL√âFONO", langLbl: "Idioma",
            notif: "Notificaciones", notifDesc: "Recibir alertas",
            tabRefer: "Invitar y Ganar", tabLeader: "Clasificaci√≥n", referDesc: "¬°Comparte este c√≥digo para ganar puntos!"
        },
        hi: {
            brand: "‡§ó‡§ø‡§´‡•ç‡§ü ‡§ê‡§™", profile: "‡§™‡•ç‡§∞‡•ã‡§´‡§º‡§æ‡§á‡§≤", settings: "‡§∏‡•á‡§ü‡§ø‡§Ç‡§ó‡•ç‡§∏", about: "‡§π‡§Æ‡§æ‡§∞‡•á ‡§¨‡§æ‡§∞‡•á ‡§Æ‡•á‡§Ç",
            logout: "‡§≤‡•â‡§ó‡§Ü‡§â‡§ü", wheelTitle: "‡§ó‡§ø‡§´‡•ç‡§ü ‡§µ‡•ç‡§π‡•Ä‡§≤", run: "‡§ö‡§≤‡§æ‡§è‡§Ç",
            wheelDesc: "‡§¨‡§ü‡§® ‡§¶‡§¨‡§æ‡§§‡•á ‡§π‡•Ä ‡§Ö‡§™‡§®‡•á ‡§Ü‡§™ ‡§ö‡§≤‡§§‡§æ ‡§π‡•à", lblName: "‡§®‡§æ‡§Æ",
            lblEmail: "‡§à‡§Æ‡•á‡§≤", lblPhone: "‡§´‡§º‡•ã‡§®", langLbl: "‡§≠‡§æ‡§∑‡§æ",
            notif: "‡§∏‡•Ç‡§ö‡§®‡§æ‡§è‡§Ç", notifDesc: "‡§ó‡§ø‡§´‡•ç‡§ü ‡§Ö‡§≤‡§∞‡•ç‡§ü ‡§™‡•ç‡§∞‡§æ‡§™‡•ç‡§§ ‡§ï‡§∞‡•á‡§Ç",
            tabRefer: "‡§∞‡•á‡§´‡§∞ ‡§î‡§∞ ‡§ï‡§Æ‡§æ‡§è‡§Ç", tabLeader: "‡§≤‡•Ä‡§°‡§∞‡§¨‡•ã‡§∞‡•ç‡§°", referDesc: "‡§Ö‡§Ç‡§ï ‡§Ö‡§∞‡•ç‡§ú‡§ø‡§§ ‡§ï‡§∞‡§®‡•á ‡§ï‡•á ‡§≤‡§ø‡§è ‡§Ø‡§π ‡§ï‡•ã‡§° ‡§∏‡§æ‡§ù‡§æ ‡§ï‡§∞‡•á‡§Ç!"
        }
    };

    function changeLanguage() {
        const lang = document.getElementById('langSelect').value;
        const t = translations[lang];
        
        document.getElementById('ui-brand').innerText = t.brand;
        document.querySelectorAll('.txt-profile').forEach(el => el.innerText = t.profile);
        document.querySelectorAll('.txt-settings').forEach(el => el.innerText = t.settings);
        document.querySelector('.txt-about').innerText = t.about;
        document.querySelector('.txt-logout').innerText = t.logout;
        document.querySelector('.txt-wheel-title').innerText = t.wheelTitle;
        document.querySelector('.txt-wheel-desc').innerText = t.wheelDesc;
        document.querySelector('.txt-run').innerText = t.run;
        document.querySelector('.txt-lbl-name').innerText = t.lblName;
        document.querySelector('.txt-lbl-email').innerText = t.lblEmail;
        document.querySelector('.txt-lbl-phone').innerText = t.lblPhone;
        document.querySelector('.txt-lang-lbl').innerText = t.langLbl;
        document.querySelector('.txt-notif').innerText = t.notif;
        document.querySelector('.txt-notif-desc').innerText = t.notifDesc;
        document.querySelector('.txt-tab-refer').innerText = t.tabRefer;
        document.querySelector('.txt-tab-leader').innerText = t.tabLeader;
        document.querySelector('.txt-refer-desc').innerText = t.referDesc;
    }

    /* --- 3. GENERAL APP LOGIC --- */
    function toggleSidebar() {
        document.getElementById('sidebar').classList.toggle('open');
        document.getElementById('backdrop').classList.toggle('active');
    }

    function switchView(viewName) {
        if(document.getElementById('sidebar').classList.contains('open')) toggleSidebar();
        document.querySelectorAll('.view').forEach(v => v.classList.remove('active'));
        document.getElementById('view-' + viewName).classList.add('active');
    }

    let degree = 0;
    function spinWheel() {
        degree += Math.floor(Math.random() * 2000) + 2000;
        document.getElementById('wheel').style.transform = `rotate(${degree}deg)`;
    }

    function updatePhoto(event) {
        const reader = new FileReader();
        reader.onload = () => { document.getElementById('displayPic').src = reader.result; };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>

