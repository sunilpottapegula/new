                <div class="form-group">
                    <label>Gmail Address</label>
                    <input type="email" id="regEmail" placeholder="Enter @gmail.com">
                    <ul class="validation-list">
                        <li id="v-gmail" class="validation-item">Must end with @gmail.com</li>
                    </ul>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" id="regPass" placeholder="Set Password">
                    <ul class="validation-list">
                        <li id="v-length" class="validation-item">At least 8 characters</li>
                        <li id="v-alpha" class="validation-item">At least one alphabet</li>
                        <li id="v-num" class="validation-item">At least one number</li>
                        <li id="v-spec" class="validation-item">At least one special character (@#$%^&*)</li>
                    </ul>
                </div>

                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" id="regConfirmPass" placeholder="Confirm">
                    <ul class="validation-list">
                        <li id="v-match" class="validation-item">Passwords must match</li>
                    </ul>
                </div>

                <button class="btn btn-primary" id="btnRegister" onclick="handleRegister()" disabled>Complete Registration</button>
            </div>
