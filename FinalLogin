    <script>
        // --- VALIDATION LOGIC ---
        const regEmail = document.getElementById('regEmail');
        const regPass = document.getElementById('regPass');
        const regConf = document.getElementById('regConfirmPass');
        const regBtn = document.getElementById('btnRegister');

        function validateForm() {
            const emailValue = regEmail.value;
            const passValue = regPass.value;
            const confValue = regConf.value;

            // Email check
            const isGmail = emailValue.toLowerCase().endsWith('@gmail.com');
            document.getElementById('v-gmail').className = isGmail ? 'validation-item valid' : 'validation-item';

            // Password checks
            const hasLength = passValue.length >= 8;
            const hasAlpha = /[a-zA-Z]/.test(passValue);
            const hasNum = /[0-9]/.test(passValue);
            const hasSpec = /[!@#$%^&*(),.?":{}|<>]/.test(passValue);

            document.getElementById('v-length').className = hasLength ? 'validation-item valid' : 'validation-item';
            document.getElementById('v-alpha').className = hasAlpha ? 'validation-item valid' : 'validation-item';
            document.getElementById('v-num').className = hasNum ? 'validation-item valid' : 'validation-item';
            document.getElementById('v-spec').className = hasSpec ? 'validation-item valid' : 'validation-item';

            // Match check
            const isMatch = (confValue === passValue && passValue !== "");
            document.getElementById('v-match').className = isMatch ? 'validation-item valid' : 'validation-item';

            // Enable button only if all valid
            regBtn.disabled = !(isGmail && hasLength && hasAlpha && hasNum && hasSpec && isMatch);
        }

        regEmail.addEventListener('input', validateForm);
        regPass.addEventListener('input', validateForm);
        regConf.addEventListener('input', validateForm);

        // --- GENERAL UI ---
        function toggleView() {
            const isMobile = document.getElementById('viewToggle').checked;
            document.getElementById('webViewWrapper').style.display = isMobile ? 'none' : 'flex';
            document.getElementById('mobileViewWrapper').style.display = isMobile ? 'flex' : 'none';
            document.body.style.background = isMobile ? "#222" : "#f0f2f5";
        }

        function openSignup() { 
            document.getElementById('regEmail').value = "";
            document.getElementById('regPass').value = "";
            document.getElementById('regConfirmPass').value = "";
            validateForm();
            document.getElementById('signupModal').style.display = 'flex'; 
        }

        function closeSignup() { document.getElementById('signupModal').style.display = 'none'; }

        function handleLogin(type) {
            const email = document.getElementById(type + 'Email').value;
            const pass = document.getElementById(type + 'Pass').value;
            if (email === "sunil@gmail.com" && pass === "Sunil@1900") {
                alert("Welcome back!"); return;
            }
            document.getElementById(type + 'MainError').innerText = "Invalid credentials.";
        }

        function handleRegister() {
            alert("Success! Account created.");
            closeSignup();
        }

        function handleGoogle(response) { alert("Google Success!"); }

        let sIdx = 0;
        setInterval(() => {
            const wSlides = document.querySelectorAll('.web-slide');
            wSlides[sIdx].classList.remove('active');
            sIdx = (sIdx + 1) % wSlides.length;
            wSlides[sIdx].classList.add('active');
            const mobileText = document.getElementById('mobileSlideText');
            if(mobileText) {
                const mTexts = ["üîí Secure Digital Wallet", "‚ö° Lightning Fast", "üíé Total Control"];
                mobileText.innerText = mTexts[sIdx % mTexts.length];
            }
        }, 3000);
    </script>
